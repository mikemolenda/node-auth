extends layout

block content
    h2.page-header= title
    p Register a new account using the form below
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}

    form(method='post', action='/users/register', enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(type='text', name='name')

        .form-group
            label Email
            input.form-control(type='email', name='email')

        .form-group
            label Desired Username
            input.form-control(type='text', name='username')

        .form-group
            label Password
            input.form-control(type='password', name='password')

        .form-group
            label Confirm Password
            input.form-control(type='password', name='passconf')

        .form-group
            label Profile Picture
            input.form-control(type='file', name='profilepic')

        input.btn.btn-primary(type='submit', name='submit', value='Register')

